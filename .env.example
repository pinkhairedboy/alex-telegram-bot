# Chat usernames to monitor (without @)
MONITORED_CHAT_USERNAMES=username1,username2,username3

# Keywords to filter messages (comma-separated, case-insensitive)
# Example: iphone,айфон,raize,райз
FILTER_KEYWORDS=keyword1,keyword2,keyword3

# https://api.telegram.org/bot<BOT_TOKEN>/getUpdates
YOUR_CHAT_ID=your_chat_id_here

# Session string (will be auto-generated on first run - DO NOT SHARE)
SESSION_STRING=

# Bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# Get these from https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash
