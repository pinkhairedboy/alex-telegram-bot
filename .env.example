# Chat usernames to monitor (without @)
MONITORED_CHAT_USERNAMES=username1,username2,username3

# Keywords to filter messages (comma-separated, case-insensitive)
FILTER_KEYWORDS=keyword1,keyword2,keyword3

# Session string (will be generated on first run)
SESSION_STRING=

# Get these from https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash

BOT_TOKEN=your_bot_token